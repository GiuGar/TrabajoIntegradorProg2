<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>	
<!-- /Head -->

<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container-formulario">

		<form class="formulario" action="/user/login" method="POST"> <!-- Estaría bueno que funcionara con POST, pero se descompaginan el botón y el enter -->
			<h2 class="products-title">Login</h2>

			<div class="input_field">
				<label for="usuario">Usuario:</label>
				<input type="text" class="input" name="usuario" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
				<!-- vemos si hay errorers y si coincide con el name del input, enviamos el msg -->
				<% if (locals.errors && errors.email) { %>
					<div>
						<%= errors.email.msg %>
					</div>
					<% } %>
			  </div>
			  <div class="input_field">
				<label for="password">Contraseña:</label>
				<input type="password" class="input" name="password" value="">
				<% if (locals.errors && errors.password) { %>
				  <div class="error-msg"><%= errors.password.msg %></div>
				  <% } %>
			  </div>
			<div class="input_field">
				<label for="recordar">Recordarme:</label>
				<input type="checkbox" class="input" name="recordarme" value="true">
			</div>  
				<button class="boton-enviar" type="submit">Iniciar sesión</button>
			  </form>
		</div>
	</div>	
	

	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>

</html>