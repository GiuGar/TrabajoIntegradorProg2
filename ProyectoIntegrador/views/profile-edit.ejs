	<div class="container-formulario">		

		<form class="formulario" action="/user/profile" method="POST">
			<h2 class="products-title">Editar Perfil:</h2>

			<div class="input_field">
			  <label for="email">Editar Email:</label>
			  <input type="text" class="input" name="email" value="" placeholder="Email actual: <%= usuario.email %>">
			</div>
			<div class="input_field">
			  <label for="usuario">Editar Usuario:</label>
