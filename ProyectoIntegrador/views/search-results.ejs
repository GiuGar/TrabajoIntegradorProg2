<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>	
<!-- /Head -->

<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= mensaje %></h2>
			</div>

			<% if (resultados.length >= 1) {
				for (let i = 0; i < resultados.length; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/id/<%= resultados[i].id %>">
								<figure class="product-box_image">
									<img src= "<%= resultados[i].imagen_producto %>" alt= "<%= resultados[i].nombre_producto %>">
								</figure>
								<article class="product-box_data">
									<h2><%= resultados[i].nombre_producto %></h2>
									<p><%= resultados[i].descripcion_producto %></p>
                                    <p><strong>Publicado por:</strong> <%= resultados[i].usuario.usuario %></p>
									<p><strong>Comentarios:</strong></p>
                                    <ul>
			                        <% for (let c = 0; c < resultados[i].comentarios.length; c++) { %>
                                        <li><%= resultados[i].comentarios[c].texto_comentario %></li>
                                        <% } %>
                                    </ul>
								</article>
							</a>
						</section>
					</div>
			<% } 
			} %> 
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>

</html>