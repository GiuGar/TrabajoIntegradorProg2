<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

<body>
<!-- Header -->
<%- include('./partials/headerDeslogueado') %>	
<!-- /Header -->

<% for( let i = 0; i < index.length; i++ ) { %>
    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <h2 class="products-title"><%= index[i].nombre %></h2> 
            <p class="product-detail-description">
                <a href="product-add.html">Agregar al carrito</a>
            </p>
        </div>
        <div class="product-detail">
            <div class="row">
                <% for (let j = 0; j < index.length; j++) { %>
                    <article class="col-12 col-lg-8 product-detail-info">
                        <img src="<%= index[j].imagen %>" alt="<%= index[j].nombre %>">
                        <p class="product-detail-description">
                            <%= index[j].descripcion %>
                        </p>
                    </article>
                <% } %>
            
                    <div class="col-12 col-lg-4">
                        <!-- SecciÃ³n de comentarios -->
                        <h3>Comentarios</h3>
                        <% for (let k = 0; k < comentarios.length; k++) { %>
                            <div class="comment">
                                <img src="<%= comentarios[k].fotoDePerfil %>" alt="Foto de perfil" width="auto" height="auto">
                                <p><%= comentarios[k].usuario %></p>
                                <p><%= comentarios[k].texto %></p>
                            </div>
                        <% } %>
                    </div>    
            </div>
        </div>
    </div>
<% } %>

<%- include('./partials/footer') %>
</body>
</html>