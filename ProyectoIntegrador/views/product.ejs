<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

<body>
<!-- Header -->
<%- include('./partials/headerDeslogueado') %>    
<!-- /Header -->

<% for( let i = 0; i < index.length; i++ ) { %>
    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <h1 class="products-title"><%= index[i].nombre %></h1> 
            <p class="product-detail-description">
        
            <p>
                <a href="/product/add" class="agregarProd"> Editar</a>
            </p>   
	
            </p>
        </div>
        <div class="product-detail">
            <div class="row">
                <article class="col-12 col-lg-8 product-detail-info">
                    <img src="<%= index[i].imagen %>" alt="<%= index[i].nombre %>">
                    <p class="product-detail-description">
                        <%= index[i].descripcion %>
                    </p>
                </article>
                <div class="col-12 col-lg-4">
                    <!-- SecciÃ³n de comentarios -->
                    <h1>Comentarios</h1>
                    <% for (let k = 0; k < comentarios.length; k++) { %>
                        <div class="comment">
                            <img src="<%= comentarios[k].fotoDePerfil %>" alt="Foto de perfil" width="auto" height="auto">
                            <p>Usuario: <%= comentarios[k].usuario %></p>
                            <p>Comentario: <%= comentarios[k].texto %></p>
                        </div>
                    <% } %>
                </div>    
            </div>
        </div>
    </div>
<% } %>

<%- include('./partials/footer') %>
</body>
</html>