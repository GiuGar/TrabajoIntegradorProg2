<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

<body>
<%- include('./partials/headerLogueado') %>

<% for( let i = 0; i < index.length; i++ ) { %>
    <div class="container products-wrapper">
        <div class="d-flex align-items-center">
            <h2 class="products-title"><%= index[i].nombre %></h2> 
            <p class="product-detail-description">
                <a href="product-add.html">Agregar al carrito</a>
                <!-- Asumiendo que querías mostrar una imagen relacionada con el producto o comentario -->
                <figure class="product-box_image">
                    <img src="<%= index[i].fotoPerfil %>" alt="<%= index[i].nombre %>">
                </figure>
            </p>
        </div>
        <div class="product-detail">
            <div class="row">
                <% for (let j = 0; j < index.length; j++) { %>
                    <article class="col-12 col-lg-8 product-detail-info">
                        <img src="<%= index[i].imagen %>" alt="<%= index[j].nombre %>">
                        <p class="product-detail-description">
                            <%= index[j].descripcion %>
                        </p>
                    </article>
                <% } %>
                <div class="col-12 col-lg-4">
                    <!-- Sección de comentarios -->
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('./partials/footer') %>
</body>
</html>