<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>	
<!-- /Head -->

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado') %>	
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			
			<div class="img-container offset-3 col-2">
				<!-- <img src="" alt="foto de perfil" class="foto-perfil"> -->
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					
						<a href="/user/profile/edit"><i class="fas fa-cog edit"></i></a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				
				<h1>Perfil de <%= data.usuario %></h1>
    <p>Email: <%= data.email %></p>
    <p>Total de productos cargados: <%= data.productos.length %></p>

    <h2>Productos Cargados</h2>
    <ul>
        <% data.productos.forEach(function(producto) { %>
            <li>
                <a href="/products/<%= producto.id %>"><%= producto.name %></a>
                - Cargado el <%= producto.createdAt.toDateString() %>
            </li>
        <% }); %>
    </ul>
					<br>
					<form action="/edit" method="POST">
						<button type="submit" class="boton-enviar">Editar perfil</button>
					</form>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			
			<!-- Show mis productos -->
			
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>	
</html>