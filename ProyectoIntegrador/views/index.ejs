<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>	
<!-- /Head -->

<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>	
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>  
				<a href="/create" class="agregarProd" > Agregar producto</a>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < data.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= data.productos[i].id %>">
							<figure class="product-box_image">
								<img src= "<%= data.productos[i].imagen %>" alt= "<%= data.productos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= data.productos[i].nombre %></h2>
								<p><%= data.productos[i].descripcion %></p>
								<p>Comentarios: <%= data.productos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>


	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < 4; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/id/<%= data.productos[i].id %>">
						<figure class="product-box_image">
							<img src= "<%= data.productos[i].imagen %>" alt= "<%= data.productos[i].nombre %>">
						</figure>
						<article class="product-box_data">
							<h2><%= data.productos[i].nombre %></h2>
							<p><%= data.productos[i].descripcion %></p>
							<p>Comentarios: <%= data.productos[i].comentarios.length %></p>
						</article>
					</a>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>	
</html>