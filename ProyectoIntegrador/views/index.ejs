<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>	
<!-- /Head -->

<body>
	
	<!-- Nombre de usuario si esta logueado -->
	
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %>
	<% } else { %>
		<%- include('./partials/headerDeslogueado')  %>
	<% } %>

	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>  
				<a href="/product/create" class="agregarProd" > Agregar producto</a>
			</div>
	
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < data.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= data[i].id %>">
							<figure class="product-box_image">
								<!-- Asume que las imágenes están guardadas en 'public/images' -->
								<img src="<%=data[i].imagen_producto %>" alt="<%= data[i].nombre_producto%>">
							</figure>
							<article class="product-box_data">
								<h2><%= data[i].nombre_producto%></h2>
								<p><strong>Publicado por: </strong><a href="/user/profile/id/<%= data[i].id_usuario %>"><%= data[i].usuario.usuario %></a></p>
								<p><%= data[i].descripcion_producto %></p>
								
								
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	 

	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>	
</html>