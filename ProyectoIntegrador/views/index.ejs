<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>	
<!-- /Head -->

<body>
	
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	

	<!-- Nombre de usuario si esta logueado -->
	
<% if (local.user) { %>
	<ul class="right-navbar">
		 <li><a href="profile.html">
					<%= locals.user.usuario %> <i class="fas fa-user"></i>
				</a>
			</li>
			<li>
				<form action="/user/login" method="post">
					<button class="logout" type="submit">
						Cerrar sesión <i class="fas fa-sign-in-alt"></i>
					</button>
				</form>
			</li> 

	<% } else{  %>
			
		<li>
			<a href="/user/register">Creá tu cuenta <i class="far fa-address-card"></i>
			</a>
		</li>
		<li>
			<a href="/user/login"> Login <i class="fas fa-sign-in-alt"></i></a>
		</li>
	</ul>
<% } %>








	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>  
				<a href="/product/create" class="agregarProd" > Agregar producto</a>
			</div>
	
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < data.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= data[i].id %>">
							<img class="product-box_image">
								<!-- Asume que las imágenes están guardadas en 'public/images' -->
								<img src="<%=data[i].imagen_producto %>" alt="<%= data[i].nombre_producto%>">
							</figure>
							<article class="product-box_data">
								<h2><%= data[i].nombre_producto%></h2>
								<p><%= data[i].descripcion_producto %></p>
								
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>


	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < data.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= data[i].id %>">
							<figure class="product-box_image">
								<img src="<%= data[i].imagen_producto %>" alt="<%= data[i].nombre_producto %>">
							</figure>
							<article class="product-box_data">
								<h2><%= data[i].nombre_producto %></h2>
								<p><%= data[i].descripcion_producto %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>	
</html>