<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<!-- Head -->
<%- include('./partials/head') %>
<!-- /Head -->


<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container-formulario">		

			<form class="formulario" action="/user/profile/edit/id/<%= usuario.id %>" method="post"> <!-- Estaría bueno que funcionara con POST, pero se descompaginan el botón y el enter -->
				<h2 class="products-title">Edita tu perfil:</h2>

				<div class="input_field">
				  <label for="email">Email:</label>
				  <input type="text" class="input" name="email" value="<%= locals.oldData && oldData.email ? oldData.email : null  %>" placeholder="Actual: <%= usuario.email %>">
				  <% if (locals.errors && errors.email) { %>
					<div class="error-msg"><%= errors.email.msg %></div>
					<% } %>
				</div>
				<div class="input_field">
				  <label for="usuario">Usuario:</label>
				  <input type="text" class="input" name="usuario" value="" placeholder="Actual: <%= usuario.usuario %>">
				  <% if (locals.errors && errors.usuario) { %>
					<div class="error-msg"><%= errors.usuario.msg %></div>
					<% } %>
				</div>
				<div class="input_field">
				  <label for="password">Contraseña:</label>
				  <input type="password" class="input" name="password" value="">
				  <% if (locals.errors && errors.password) { %>
					<div class="error-msg"><%= errors.password.msg %></div>
					<% } %>
				</div>
				<div class="input_field">
					<label for="dni">DNI:</label>
					<input type="number" class="input" name="dni" value="<%= locals.oldData && oldData.dni ? oldData.dni : null  %>" placeholder="Actual: <%= usuario.dni %>"> 
				</div>
				<div class="input_field">
					<label for="nacimiento">Fecha de Nacimiento:</label>
					<input type="date" class="input" name="nacimiento" value="<%= locals.oldData && oldData.nacimiento ? oldData.nacimiento : null  %>" placeholder="Actual: <%= usuario.fecha %>">
					<% if (locals.errors && errors.nacimiento) { %>
						<div class="error-msg"><%= errors.nacimiento.msg %></div>
						<% } %>
				</div>
				
				<button class="boton-enviar" type=submit>Editar mi perfil</button>
			</form>
		</div>
		



	<!-- footer -->
	<%- include('./partials/footer') %>	
	<!-- /footer -->
</body>
</html>